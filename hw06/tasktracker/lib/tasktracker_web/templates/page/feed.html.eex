<%= if @current_user do %>
  <div class="row">
    <div class="col">
      <%= render Tasktracker.TaskView, "form.html",
        Map.put(assigns, :action, task_path(@conn, :create)) %>
    </div>
  </div>
<% end %>

<h1> Your Tasks</h1>

<%= Enum.map @tasks, fn task -> %>
<div class="row">
  <div class="col">
    <div class="card-body">
      <h6 class="card-title"><%= task.user.name %> </h6>
      <p> <%= task.description %></p>
    </div>
  </div>
</div>
<% end %>
